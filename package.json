{
    "name": "iacula",
    "version": "1.0.0",
    "description": "Cultivar Presen√ßa de Deus",
    "main": "dist/main/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "cross-env NODE_ENV=development concurrently \"npm run watch\" \"npm run copy-renderer\" \"npm run start\"",
        "build": "npm run prebuild && tsc && electron-builder",
        "watch": "tsc -w",
        "prebuild": "npm run copy-renderer",
        "copy-renderer": "node scripts/copy-assets.js"
    },
    "author": {
        "name": "Gabriel Tavares",
        "email": "gabrieltxtavares@gmail.com"
    },
    "license": "ISC",
    "devDependencies": {
        "@electron/notarize": "^3.0.1",
        "@types/electron-squirrel-startup": "^1.0.2",
        "@types/node": "^20.17.30",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "dotenv": "^16.5.0",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.3"
    },
    "build": {
        "appId": "com.iacula.app",
        "productName": "Iacula",
        "directories": {
            "output": "release",
            "buildResources": "assets"
        },
        "files": [
            "dist/**/*",
            "assets/**/*"
        ],
        "extraResources": [
            {
                "from": "assets",
                "to": "assets"
            }
        ],
        "win": {
            "target": "nsis",
            "compression": "maximum",
            "icon": "assets/images/icon.ico"
        },
        "nsis": {
            "oneClick": true,
            "perMachine": false,
            "allowToChangeInstallationDirectory": false,
            "deleteAppDataOnUninstall": false,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "runAfterFinish": true,
            "artifactName": "${productName}-Setup-${version}.${ext}",
            "shortcutName": "${productName}",
            "uninstallDisplayName": "${productName}",
            "differentialPackage": true
        },
        "linux": {
            "target": "deb",
            "category": "Utility",
            "maintainer": "Gabriel Tavares <gabrieltxtavares@gmail.com>",
            "compression": null,
            "icon": "assets/images/icon.png"
        },
        "mac": {
            "target": "dmg",
            "category": "public.app-category.utilities",
            "compression": "maximum",
            "icon": "assets/images/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "signIgnore": [
                "node_modules"
            ]
        },
        "afterSign": "scripts/notarize.js",
        "publish": {
            "provider": "github",
            "releaseType": "release"
        },
        "compression": "maximum",
        "asar": true,
        "asarUnpack": [
            "assets/**/*"
        ]
    },
    "dependencies": {
        "@electron/remote": "^2.1.2",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^10.0.1"
    }
}