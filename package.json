{
    "name": "iacula",
    "version": "1.0.0",
    "description": "Cultivar Presen√ßa de Deus",
    "main": "dist/main/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "concurrently \"npm run watch\" \"npm run copy-renderer\" \"npm run start\"",
        "build": "npm run prebuild && tsc && electron-builder",
        "watch": "tsc -w",
        "prebuild": "npm run copy-renderer",
        "copy-renderer": "mkdir -p dist/renderer && cp -r src/renderer/*.html src/renderer/*.js dist/renderer/ && cp -r assets/prayers dist/assets/ && cp -r assets/images dist/assets/"
    },
    "author": {
        "name": "Gabriel Tavares",
        "email": "gabrieltxtavares@gmail.com"
    },
    "license": "ISC",
    "devDependencies": {
        "@types/electron-squirrel-startup": "^1.0.2",
        "@types/node": "^20.17.30",
        "concurrently": "^8.2.2",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.3"
    },
    "build": {
        "appId": "com.iacula.app",
        "productName": "Iacula",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "assets/**/*"
        ],
        "win": {
            "target": "nsis",
            "compression": "maximum"
        },
        "linux": {
            "target": "deb",
            "category": "Utility",
            "maintainer": "Gabriel Tavares <gabrieltxtavares@gmail.com>",
            "compression": null
        },
        "mac": {
            "target": "dmg",
            "category": "public.app-category.utilities",
            "compression": "maximum"
        },
        "compression": "maximum",
        "asar": true,
        "asarUnpack": [
            "assets/images/**/*"
        ],
        "extraResources": [
            {
                "from": "assets",
                "to": "assets",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "publish": {
            "provider": "github",
            "releaseType": "release"
        }
    },
    "dependencies": {
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^10.0.1"
    }
}